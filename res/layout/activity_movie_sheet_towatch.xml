<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MovieToWatchSheetActivity" >

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="N/A"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/movieDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieTitle"
        android:layout_centerHorizontal="true"
        android:text="N/A"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ImageView
        android:id="@+id/movieImage"
        android:layout_width="150dip"
        android:layout_height="290dip"
        android:layout_below="@+id/movieDate"
        android:layout_toLeftOf="@+id/movieDate"
        android:src="@drawable/waitingforimage" />

    <TextView
        android:id="@+id/movieDescribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/movieImage"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/movieImage" 
        android:layout_centerVertical="true"/>

	<LinearLayout
	    android:id="@+id/buttons"
	    android:orientation="horizontal"
	    android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/movieImage"
	    android:layout_below="@+id/movieImage"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_centerHorizontal="true">
	    
	    <Button
	        android:id="@+id/toWatch"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="+ toWatch" />
	    
	    <Button
	        android:id="@+id/history"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="+ history" />
	    

	</LinearLayout>
</RelativeLayout>
