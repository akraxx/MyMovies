<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:text="@string/titleTextView"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/titleResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/titleTextView"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleTextView"
        android:layout_marginLeft="10dp"
        android:text="Date : " />

    <TextView
        android:id="@+id/dateResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titleTextView"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/dateTextView" />

    <TextView
        android:id="@+id/noteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dateResult"
        android:layout_marginLeft="10dp"
        android:text="Note : " />

    <TextView
        android:id="@+id/noteResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dateResult"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/dateTextView" />
    
    <TextView
        android:id="@+id/rateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/rateTextView"
        android:layout_below="@+id/noteResult" 
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/rateResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp" 
        android:layout_below="@+id/noteResult" 
        android:layout_toRightOf="@+id/rateTextView"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>